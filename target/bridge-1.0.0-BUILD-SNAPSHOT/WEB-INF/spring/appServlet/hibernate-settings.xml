	<!-- *******SessionFactory********* -->


	<bean id="sessionFactoryNavWork"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="navDS_Work" />				
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.SQLServer2008Dialect</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>																		
				<value>hbm/UniIncomingBuffer.hbm.xml</value> 
				<value>hbm/UniPubErrLog.hbm.xml</value>
				<value>hbm/UniSubErrLog.hbm.xml</value>
				<value>hbm/UniPubSuccessLog.hbm.xml</value>
				<value>hbm/UniPubConfirm.hbm.xml</value>
			</list>
		</property>		
	</bean>	


	<bean id="sessionFactoryNavLK"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="navDS_LK" />				
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.SQLServer2008Dialect</prop>
				<prop key="hibernate.show_sql">false</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>																		
				<value>hbm/UniIncomingBuffer.hbm.xml</value>
				<value>hbm/UniPubErrLog.hbm.xml</value>
				<value>hbm/UniSubErrLog.hbm.xml</value>
				<value>hbm/UniPubSuccessLog.hbm.xml</value>
				<value>hbm/UniPubConfirm.hbm.xml</value>
			</list>
		</property>		
	</bean>	
	
	
	
	<bean id="sessionFactoryNavCopy"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="navDS_MainCopy" />				
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.SQLServer2008Dialect</prop>
				<prop key="hibernate.show_sql">false</prop>
			</props>
		</property>
		<property name="mappingResources">
