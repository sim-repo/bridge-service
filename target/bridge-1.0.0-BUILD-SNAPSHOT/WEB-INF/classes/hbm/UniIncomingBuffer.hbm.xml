<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.simple.server.domain.uni">
						
	<class name="IncomingBuffer" table="[ESB Incoming Buffer]">
		<id name="id" column="[entry no]">
			<generator class="native" />
		</id>					
		
		<property name="creationDatetime" column="[datetime]" />
				
		<property name="eventId" column="[event_id]">
		    <type name="org.hibernate.type.EnumType">
		        <param name="enumClass">com.simple.server.config.EventType</param>
		        <param name="useNamed">true</param>
		    </type>
		</property>
	
		<property name="juuid" column="[guid]" />
		<property name="body" column="[body]" />		
	</class>
</hibernate-mapping>
