<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	
	<appender name="fileError" class="org.apache.log4j.RollingFileAppender">
	   <param name="append" value="false" />  
	   <param name="encoding" value="UTF-8" />	 
	   <param name="MaxFileSize" value="10MB"/> 
	   <param name="MaxBackupIndex" value="5"/>	
	   <param name="file" value="${catalina.home}/logs/front-error.log" />	   
	  
	   <layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern"
			value="%d{yyyy-MM-dd HH:mm:ss}; %-5p; %c{1}:%L; %m%n" />
	   </layout>
	</appender>
	 
	<appender name="fileInfo" class="org.apache.log4j.RollingFileAppender">
	   <param name="append" value="false" />  
	   <param name="encoding" value="UTF-8" />	 
	   <param name="MaxFileSize" value="10MB"/> 
	   <param name="MaxBackupIndex" value="5"/>	
	   <param name="file" value="${catalina.home}/logs/front-info.log" />	   
	  
	   <layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern"
			value="%d{yyyy-MM-dd HH:mm:ss}; %-5p; %c{1}:%L; %m%n" />
	   </layout>
	</appender>
	
	
	
	<!-- Application Loggers -->
	<logger name="com.simple.server">
		<level value="info" />
		<appender-ref ref="fileInfo" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="ERROR" />
		<appender-ref ref="fileError" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="ERROR" />
		<appender-ref ref="fileError" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="ERROR" />
		<appender-ref ref="fileError" />
	</logger>

	<logger name="org.springframework.web">
		<level value="ERROR" />
		<appender-ref ref="fileError" />
	</logger>
	
	<root>
		<level value="ERROR" />
		<appender-ref ref="fileError" />
	</root>
	
	
</log4j:configuration>
